{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "./src",
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "include": [
    "src/**/*"
  ]
}